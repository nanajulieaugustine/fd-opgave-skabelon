---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Projections from "../components/Projections.astro";
import Titles from "../components/Titles.astro";
import Expereinces from "../components/Expereinces.astro";
import Corevalues from "../components/CoreValues.astro";
import Checkmark from "../components/Checkmark.astro";
---

<Layout>
  <Hero />
  <section class="whatToExpect">
    <figure>
      <img src="../images/meeting_man_front.jpg" alt="">
    </figure>
    <article>
      <Titles>we'll work with you</Titles>
      <h1>What To Expect</h1>
      <p>Our collaboration is built on transparency, efficiency, and measurable results. Together, we create strategies tailored to your unique needs and goals.</p>
      <Checkmark>Collaborate to build actionable strategies that drive sustainable growth and deliver tangible outcomes.</Checkmark>
      <Checkmark>Identify opportunities to optimize processes and implement impactful solutions with measurable results.</Checkmark>
    </article>
  </section>
  <div class="componentSections">
    <Projections/>
    <Expereinces/>
    <div class="corevalues">
      <Corevalues/>
    </div>
  </div>
  <section class="contact">
    <article>
    <Titles>Process</Titles>
    <h1>Contact Us. It's Easy.</h1>
    <p>Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative.</p>
    <ul>
      <li>
        <p>Call Today</p>
        <h3>+1 800 100 900</h3>
      </li>
      <li>
        <p>Monday To Friday</p>
        <h3>9AM-5PM</h3>
      </li>
      <li>
        <p>USA Office</p>
        <h3>195 Devonshire St Boston, MA 02110</h3>
      </li>
    </ul>
    </article>
    <figure>
      <img class="woman" src="../images/contact_woman.jpg" alt="woman">
      <img class="computer" src="../images/computer_meeting.jpg" alt="meeting over computer">
      <img class="hands" src="../images/hands_discussion.jpg" alt="hands">
    </figure>
  </section>
</Layout>

<style>
  section{
    padding-inline: var(--content-width);
    padding-top:var(--content-height);
    padding-bottom:var(--content-height);
  }

  .whatToExpect{
    display:inline-flex;
    align-items: flex-start;
    gap:82px;
    padding-bottom:var(--content-height);

    figure{
         width:100%; 
      &::before{
        left:-2.5rem;
        top:-3rem;
      }
      &::after{
        left: -1rem;
        top: -2rem;
      }
    }

    article{
      display:flex;
      flex-direction: column;
      align-items: flex-start;
      gap:14px;
    }
  }

  .corevalues{
    background-color: var(--primary03-color);
  }

  .componentSections{
    background-color: var(--secondary01-color);
  }

  .contact{
    display:inline-flex;
    align-items: flex-start;
    gap:69px;

    article{
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      width: 407px;
      gap:6px;
    }

    ul{
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap:46px;
      li{
        list-style: none;
      }
    }

    figure{
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-rows: min-content;
      grid-template-areas:
      "woman computer"
      "woman hands";
      gap:16px;

      &::before{
        top:-3rem;
        left:30rem;
      }

      &::after{
          bottom:-1.6rem;
          left:-2rem;
        }

      .woman{
        grid-area:woman;
        grid:stack;
      }
      .computer{
        grid-area: computer;
        grid:stack;
      }

      .hands{
        grid-area: hands;
        grid: stack;
      }
    }
  }

  figure{
      position:relative;

          &::before {
        --square-count: 10;
        --square-size: 1.34rem;
        
        --_square-size: var(--square-size, 1rem);
        --_square-half: calc(var(--square-size) / 2);
        --_square-sum: calc(var(--square-count) * var(--square-size));
        z-index: -1;
        content: '';
        position: absolute;
        inline-size: calc( round( var(--_square-sum), var(--_square-size) ) - var(--_square-half) );
        aspect-ratio: 1;
        background: linear-gradient(135deg, #BE965D, #976F40, #C99B61, #F0BE7B , #FFCB85, #EEBC79, #C0935B, #976F40) 0 0 / 100% 100%;
        mask:
          var(--square-pattern) 0 0 / var(--_square-size) var(--_square-size),
          var(--square-pattern) var(--_square-half) var(--_square-half) / var(--_square-size) var(--_square-size);
      }
        &::after {
      content: '';
      position: absolute;
      background: var(--primary02-color);
      width: 150px;
      height: 100px;
      border-radius: 20px;
      z-index: -1;
    }
  }

</style>
