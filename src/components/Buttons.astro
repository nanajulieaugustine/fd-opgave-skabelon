---
const {variant, size, action}=Astro.props;
---

<button data-size={size} data-variant={variant} popovertarget={action}><slot/></button>

<style>
    button{
        cursor:pointer;
        color: var(--primary03-color);
        background-color:var(--primary01-color);
        border-radius: 42px;
        font-weight: 600;
        gap:10px;
        transition: linear 0.3s;

        &:hover{
            background-color: var(--tertiary02-color);
        }
    }

    [data-variant="secondary"]{
        background-color: var(--primary03-color);
        color: var(--secondary02-color);

        &:hover{
            color: var(--primary03-color);
            background-color: var(--secondary02-color);
        }
    }

    [data-variant="tertiary"]{
        background-color:var(--secondary02-color);

        &:hover{
            background-color:var(--primary01-color); 
        }
    }

    [data-size="xlarge"] {
        padding:15px 56px;
    }

    [data-size="large"]{
        padding:16px 31px;
    }

    [data-size="medium"]{
        border-radius: 55px;
        padding:15px 34px;
    }

    [data-size="small"]{
        border-radius: 20px;
        padding:4px 16px;
    }

</style>